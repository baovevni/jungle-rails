<h1>Login</h1>
<%= form_with url: session_path, local: true, html: { class: 'form-container' } do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-input' %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-input' %>
  </div>

  <div class="actions">
    <%= form.submit 'Login', class: 'form-submit' %>
  </div>
<% end %>