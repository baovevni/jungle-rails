<h1>Register</h1>
<% if @user.errors.any? %>
  <div id="error_explanation" class="error-messages">
    <h2><%= pluralize(@user.errors.count, "error") %> Cannot create user:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @user, local: true, html: { class: 'form-container' } do |form| %>
  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: 'form-input' %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: 'form-input' %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-input' %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-input' %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: 'form-input' %>
  </div>

  <div class="actions">
    <%= form.submit 'Register', class: 'form-submit' %>
  </div>
<% end %>